<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="app.redsys_payment" class="Payum\Core\Bridge\Symfony\Builder\GatewayFactoryBuilder">
            <argument>Eclyptox\SyliusRedsysPlugin\Payum\RedsysGatewayFactory</argument>
            <tag name="payum.gateway_factory_builder" factory="redsys_payment" />
        </service>

        <service id="Eclyptox\SyliusRedsysPlugin\Form\Type\SyliusGatewayConfigurationType">
            <tag name="sylius.gateway_configuration_type" type="redsys_payment" label="Redsys Payment" />
            <tag name="form.type" />
        </service>
    </services>
</container>
